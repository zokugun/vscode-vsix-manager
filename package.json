{
	"name": "vsix-manager",
	"displayName": "VSIX Manager",
	"description": "Install extensions from your own sources",
	"version": "0.9.0",
	"author": {
		"name": "Baptiste Augrain",
		"email": "daiyam@zokugun.org"
	},
	"publisher": "zokugun",
	"license": "MIT",
	"homepage": "https://github.com/zokugun/vscode-vsix-manager",
	"repository": {
		"type": "git",
		"url": "https://github.com/zokugun/vscode-vsix-manager.git"
	},
	"bugs": {
		"url": "https://github.com/zokugun/vscode-vsix-manager/issues"
	},
	"engines": {
		"vscode": "^1.23.0"
	},
	"main": "./lib/index.js",
	"browser": "./lib/index.js",
	"scripts": {
		"bundle": "ncc build out/extension --out lib --external sql.js",
		"commit": "cz",
		"compile": "tsc -p src",
		"lint": "xo",
		"package": "rm -f *.vsix && vsce package",
		"prepare": "husky; fixpack || true",
		"release": "release-it",
		"vscode:prepublish": "npm run compile && npm run bundle",
		"watch": "tsc-watch -p src --onSuccess 'npm run bundle'"
	},
	"dependencies": {
		"@zokugun/vscode-utils": "^0.1.0",
		"fs-extra": "^10.0.1",
		"globby": "^11.1.0",
		"got": "^11.8.6",
		"semver": "^7.3.5",
		"sql.js": "^1.6.1",
		"untildify": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@types/fs-extra": "^9.0.12",
		"@types/node": "^20.14.8",
		"@types/semver": "^7.3.8",
		"@types/sql.js": "^1.4.2",
		"@types/vscode": "^1.23.0",
		"@vercel/ncc": "^0.38.3",
		"commitizen": "^4.3.1",
		"fixpack": "^4.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"release-it": "^18.1.2",
		"tsc-watch": "^6.3.0",
		"typescript": "^5.7.3",
		"xo": "0.60.0"
	},
	"extensionDependencies": [
		"zokugun.cron-tasks"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:vsix.installExtensions",
		"onCommand:vsix.uninstallExtensions",
		"onCommand:vsix.updateExtensions"
	],
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"contributes": {
		"commands": [
			{
				"command": "vsix.installExtensions",
				"title": "Install extensions",
				"category": "VSIX Manager"
			},
			{
				"command": "vsix.uninstallExtensions",
				"title": "Uninstall extensions",
				"category": "VSIX Manager"
			},
			{
				"command": "vsix.updateExtensions",
				"title": "Update extensions",
				"category": "VSIX Manager"
			}
		],
		"configuration": {
			"title": "VSIX Manager",
			"properties": {
				"vsix.crons": {
					"type": "object",
					"description": "Automate some commands",
					"properties": {
						"update": {
							"type": "string",
							"description": "Automatically update the extensions at the specified time",
							"default": ""
						}
					},
					"default": {},
					"scope": "application",
					"tags": [
						"vsix"
					]
				},
				"vsix.debug": {
					"type": "boolean",
					"description": "Output debug logs",
					"default": false,
					"scope": "application",
					"tags": [
						"vsix"
					]
				},
				"vsix.extensions": {
					"type": "array",
					"description": "List of extension IDs or groups to install",
					"items": [
						{
							"type": "string"
						},
						{
							"type": "object",
							"properties": {
								"id": {
									"type": [
										"string",
										"array"
									]
								},
								"enabled": {
									"type": "boolean",
									"default": true
								}
							}
						},
						{
							"type": "array",
							"items": [
								{
									"type": "string"
								}
							]
						}
					],
					"default": [],
					"scope": "application",
					"uniqueItems": true,
					"tags": [
						"vsix"
					]
				},
				"vsix.groups": {
					"type": "object",
					"description": "Map of groups",
					"items": [
						{
							"type": "array",
							"description": "List of extension IDs or groups to install",
							"items": [
								{
									"type": "string"
								},
								{
									"type": "object",
									"properties": {
										"id": {
											"type": [
												"string",
												"array"
											]
										},
										"enabled": {
											"type": "boolean",
											"default": true
										}
									}
								},
								{
									"type": "array",
									"items": [
										{
											"type": "string"
										}
									]
								}
							]
						}
					],
					"default": {},
					"scope": "application",
					"uniqueItems": true,
					"tags": [
						"vsix"
					]
				},
				"vsix.notification": {
					"type": "string",
					"description": "Display notification when a new version is installed",
					"default": "minor",
					"enum": [
						"none",
						"major",
						"minor",
						"patch"
					],
					"enumDescriptions": [
						"The new version notification won't be shown anymore",
						"The new version notification will be shown only with a new major version",
						"The new version notification will be shown only with a new minor version",
						"The new version notification will always be shown"
					],
					"scope": "application",
					"tags": [
						"vsix"
					]
				},
				"vsix.restartMode": {
					"type": "string",
					"description": "Select how to restart the extension host (only for advanced users, should be left on 'auto')",
					"default": "auto",
					"enum": [
						"auto",
						"none",
						"reload-windows",
						"restart-app",
						"restart-host"
					],
					"enumDescriptions": [
						"Select the best action",
						"Do nothing",
						"Reload the window",
						"Restart the extension host",
						"Restart the app"
					],
					"scope": "application",
					"tags": [
						"vsix"
					]
				},
				"vsix.sources": {
					"type": "object",
					"description": "Map of sources from which to find the VSIX files",
					"items": [
						{
							"type": "object",
							"description": "A source",
							"properties": {
								"type": {
									"type": "string",
									"default": "marketplace",
									"enum": [
										"file",
										"marketplace"
									]
								},
								"path": {
									"type": "string",
									"description": "The path of the directory where the extensions are stored"
								},
								"serviceUrl": {
									"type": "string",
									"description": "The url of the service API"
								},
								"fallback": {
									"type": "string",
									"description": "Use the given source if an extension can't be found at the current source"
								},
								"throttle": {
									"type": "integer",
									"description": "The delay between each query (ms)",
									"default": 0
								}
							}
						}
					],
					"default": {},
					"scope": "application",
					"uniqueItems": true,
					"tags": [
						"vsix"
					]
				}
			}
		}
	},
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#303B45",
		"theme": "dark"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"extension",
		"marketplace",
		"vsix"
	],
	"extensionKind": [
		"ui",
		"workspace"
	]
}
